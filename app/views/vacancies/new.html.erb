<% if @vacancy.errors.any? %>
  <div class="alert alert-danger">
    <h4>Ошибки:</h4>
    <ul>
      <% @vacancy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1 class="text-center mb-4">Добавить вакансию</h1>

      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_with model: @vacancy, local: true do |form| %>
            <div class="mb-3">
              <%= form.label :title, "Название вакансии", class: "form-label fw-bold" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :category, "Категория", class: "form-label fw-bold" %>
              <%= form.text_field :category, class: "form-control" %>
            </div>

            <div class="row">
              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :salary, "Зарплата", class: "form-label fw-bold" %>
                  <%= form.number_field :salary, class: "form-control" %>
                </div>
              </div>

              <div class="col-md-6">
                <div class="mb-3">
                  <%= form.label :city, "Город", class: "form-label fw-bold" %>
                  <%= form.text_field :city, class: "form-control" %>
                </div>
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :experience, "Требуемый опыт", class: "form-label fw-bold" %>
              <%= form.text_field :experience, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, "Описание", class: "form-label fw-bold" %>
              <%= form.text_area :description, class: "form-control", rows: 5 %>
            </div>

            <div class="mb-3">
              <%= form.label :employer_id, "Работодатель" %>
              <%= form.collection_select :employer_id, Employer.all, :id, :name, { prompt: "Выберите работодателя" }, class: "form-control" %>
            </div>

            <div class="d-grid">
              <%= form.submit "Добавить вакансию", class: "btn btn-primary btn-lg fw-bold" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
