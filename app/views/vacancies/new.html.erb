<div class="card bg-white p-6 rounded-lg shadow-md">
  <h1 class="text-3xl font-bold text-blue-600 mb-6">Добавить вакансию</h1>

  <%= form_with model: @vacancy, local: true, class: "space-y-4" do |form| %>
    <div class="form-control">
      <%= form.label :title, "Название вакансии", class: "label" %>
      <%= form.text_field :title, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= form.label :category, "Категория", class: "label" %>
      <%= form.text_field :category, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= form.label :salary, "Зарплата", class: "label" %>
      <%= form.number_field :salary, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= form.label :city, "Город", class: "label" %>
      <%= form.text_field :city, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= form.label :experience, "Опыт работы", class: "label" %>
      <%= form.text_field :experience, class: "input input-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= form.label :description, "Описание", class: "label" %>
      <%= form.text_area :description, class: "textarea textarea-bordered w-full" %>
    </div>

    <div class="form-control">
      <%= form.label :employer_id, "Работодатель", class: "label" %>
      <%= form.collection_select :employer_id, Employer.all, :id, :name, {}, class: "select select-bordered w-full" %>
    </div>

    <div>
      <%= form.submit "Опубликовать", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
