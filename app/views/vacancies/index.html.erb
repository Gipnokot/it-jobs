<div class="space-y-6">
  <!-- Сделаем заголовок ярким и добавим тень -->
  <h1 class="text-4xl font-bold text-center my-8 text-blue-800 shadow-md">Список вакансий</h1>

  <% @vacancies.each do |vacancy| %>
    <div class="card bg-white shadow-lg p-6 rounded-lg">
      <h2 class="text-2xl font-semibold text-blue-600"><%= vacancy.title %></h2>
      <p class="text-gray-700 mt-2"><%= vacancy.description.truncate(150) %></p>
      <div class="mt-4 flex flex-wrap gap-2">
        <span class="badge badge-primary"><%= vacancy.category %></span>
        <span class="badge badge-secondary"><%= vacancy.city %></span>
        <span class="badge badge-accent"><%= vacancy.experience %></span>
      </div>
      <div class="mt-4">
        <%= link_to "Подробнее", vacancy_path(vacancy), class: "btn btn-primary btn-wide" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Пагинация с DaisyUI, добавим классы для улучшения внешнего вида -->
<div class="flex justify-center mt-6">
  <div class="btn-group">
    <%= will_paginate @vacancies, 
          previous_label: '« Назад', 
          next_label: 'Вперед »', 
          inner_window: 1, 
          outer_window: 1, 
          class: "btn btn-info btn-sm" %>
  </div>
</div>
